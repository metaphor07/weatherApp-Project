<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>

    {{>navbar}}
    <!-- main Header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 co-12 mx-auto">
                <div class="weatherr">
                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">

                        </form>
                    </div>

                    <div class="tempInformation">
                        <div class="top_layer">
                            <p id="day">Thursday</p>
                            <p id="today_date">20oct</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get output here</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"></p>
                                <p id="temp_status"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer code -->
    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>